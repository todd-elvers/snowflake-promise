{
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"],
  "compilerOptions": {
    "outDir": "build",

    "target": "es6",
    "allowJs": true,
    "checkJs": false,

    // Include latest EcmaScript library (for things like `Object.values`, etc.)
    "lib": ["es2018"],
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",

    "baseUrl": "src/",

    // Make sure the code is high-quality
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    // Allow imports like `import Moment from "moment";`
    "esModuleInterop": true,

    // Lets us use modules which have funky default exports
    "allowSyntheticDefaultImports": true,

    // Lets us import JSON directly e.g. `import * as Data from "data.json";`
    "resolveJsonModule": true,

    // Don't check the types of our dependencies
    "skipLibCheck": true
  }
}
